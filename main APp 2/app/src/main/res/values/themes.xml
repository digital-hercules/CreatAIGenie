    <style name="MyTextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Change the color of the outline and the text color -->
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>

    <style name="editTextBackGround" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:colorAccent">@color/black</item>
        <item name="android:colorControlNormal">@color/black</item>
        <item name="android:colorControlActivated">@color/black</item>
    </style>
    <style name="Theme.Subscription" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
