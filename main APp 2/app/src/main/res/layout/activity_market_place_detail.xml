<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal"
    tools:context=".ui.generate_ai.view.MarketPlaceDetailActivity">


    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/close"
        android:padding="5dp"
        android:layout_gravity="right"
        app:tint="@color/black" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        app:shapeAppearanceOverlay="@style/roundedCornersImageView"
        android:src="@drawable/image"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/market_place"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginVertical="10dp"
        android:textSize="20dp"
        android:fontFamily="@font/bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Description about the marketplace"
        android:textColor="@color/black"
        android:padding="3dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        android:gravity="left|center_vertical"
        android:textSize="18dp"
        android:fontFamily="@font/poppins_regular"
        />
    <TextView
        android:id="@+id/tvHistory"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:background="@drawable/bg_round_corner_black"
        android:text="Continue"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:drawableRight="@drawable/next1"
        android:drawableTint="@color/black"
        android:drawablePadding="10dp"
        android:textSize="18dp"
        android:paddingHorizontal="20dp"
        android:fontFamily="@font/poppins_regular"
        />

    <TextView
        android:id="@+id/tvGenerate"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:background="@drawable/bg_round_corners_gradiant"
        android:text="Buy"
        android:textColor="@color/white_text"
        android:gravity="center"
        android:textSize="18dp"
        android:fontFamily="@font/poppins_regular"
        android:textAllCaps="false"/>


</LinearLayout>