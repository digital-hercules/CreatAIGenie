<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">


        <FrameLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:background="@color/slider_color"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="100dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hello Are you Felling Good Today!"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:maxLines="2"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="bold"
                    />


                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How Can I help You??"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:maxLines="2"
                    android:fontFamily="@font/poppins_regular"
                    />

            <LinearLayout
                android:id="@+id/llStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_round_corners_gradiant"
                android:backgroundTint="@color/white"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start a chat"
                    android:textColor="@color/main_color"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_regular"
                   />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/arrow_left_circle"
                    app:tint="@color/main_color" />


            </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/boat"
                android:layout_gravity="right"
                />



        </FrameLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>