<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.generate_ai.view.MarketPlaceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/back"
            android:padding="8dp"
            app:tint="@color/black" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/market_place"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:padding="6dp"
            android:layout_marginRight="45dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18dp"
            android:fontFamily="@font/poppins_regular"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/etText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:hint="@string/search_menu_title"
        android:drawableLeft="@drawable/ic_search"
        android:drawableTint="@color/hint_color"
        android:drawablePadding="10dp"
        android:background="@drawable/bg_gradiant"
        android:backgroundTint="@color/et_color"
        android:maxLines="5"
        android:padding="15dp"
        android:singleLine="true"
        android:layout_margin="20dp"
        android:gravity="center_vertical"
        android:textColor="@color/black_text"
        android:textColorHint="@color/hint_color"
        android:textSize="16dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_weight="1"
        android:id="@+id/rvMarketPlace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="vertical"/>




</LinearLayout>