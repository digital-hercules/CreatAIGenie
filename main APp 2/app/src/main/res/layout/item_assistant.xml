<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_feature1"
        android:backgroundTint="@color/color05"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chat"
            android:textColor="@color/white_text"
            android:textSize="18dp"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The mobile app where users can engage in various conversations, emphasizing the chat functionality"
            android:textColor="@color/white_text"
            android:textSize="14dp"
            android:maxLines="5"
            android:fontFamily="@font/poppins_regular"/>

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/chat1"
            android:layout_gravity="right"
            android:layout_marginVertical="15dp"
           />


    </LinearLayout>
</LinearLayout>
