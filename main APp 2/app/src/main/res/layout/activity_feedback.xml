<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.sidenav.view.FeedbackActivity">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/close"
        android:padding="5dp"
        android:layout_gravity="right"
        app:tint="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FEEDBACK"
        android:textSize="24dp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/bold"
        android:textColor="@color/black"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please help us improve !"
        android:textSize="16dp"
        android:layout_marginVertical="15dp"

        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/main_color"/>

    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/RatingBar1"
        android:layout_marginVertical="15dp"
        android:rating="0"
        android:isIndicator="false"/>


    <EditText
        android:id="@+id/etMessage"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Enter your valuable feedback and suggestions."
        android:background="@drawable/bg_gradiant"
        android:backgroundTint="@color/et_color"
        android:maxLines="5"
        android:padding="15dp"
        android:layout_marginVertical="20dp"
        android:gravity="left"
        android:textColor="@color/black_text"
        android:textColorHint="@color/hint_color"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/tvSubmit"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:background="@drawable/bg_round_corners_gradiant"
        android:text="Submit"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="18dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginVertical="20dp"
        android:textAllCaps="false"/>
</LinearLayout>